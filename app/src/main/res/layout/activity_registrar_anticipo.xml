<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarAnticipo"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivo del anticipo"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnrMotivoAnticipo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descipcion de anticipo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDescripcionAnticipo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha inicio"
            android:layout_weight="1"
            android:ems="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha Fin"
            android:layout_weight="1"
            android:ems="10"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtFechaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/txtFechaFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sede de destino"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnrSedeAnticipo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los anticipos a abonar son:"
            android:paddingBottom="2dp" />


        <TextView
            android:id="@+id/txtAnticipoRubroPasaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pasaje Terrestres: S/.80"
            android:layout_margin="7dp"/>
        <TextView
            android:id="@+id/txtAnticipoRubroAlimentacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alimentacion: S/.70"
            android:layout_margin="7dp"/>
        <TextView
            android:id="@+id/txtAnticipoRubroHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel: S/.80"
            android:layout_margin="7dp"/>
        <TextView
            android:id="@+id/txtAnticipoRubroMovilidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movilidad interna: S/.40"
            android:layout_margin="7dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total de viaticos : S/."
            android:gravity="right"
            android:id="@+id/txtTotalViaticos"/>
    </LinearLayout>
<android.support.v4.widget.Space
    android:layout_width="match_parent"
    android:layout_height="240dp">
</android.support.v4.widget.Space>
    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Registrar"
        android:textSize="15dp"
        android:background="@color/colorAccent"
        android:id="@+id/btnRegistrarAnticipo">

    </Button>
</LinearLayout>